{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "noEmit": false,
    "paths": {
      "src/*": ["./src/*"],
      "@src/*": ["./src/*"],
      "root/*": ["./*"]
    },
    "resolveJsonModule": true
  }
}
